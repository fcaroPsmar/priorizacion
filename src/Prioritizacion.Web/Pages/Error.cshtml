@page
@model ErrorModel
@{
  ViewData["Title"] = "Error";
}

<div class="card">
  <h1>Ha ocurrido un error</h1>
  <p class="muted">La solicitud no pudo procesarse. Inténtalo de nuevo más tarde.</p>
  @if (Model.StatusCode.HasValue)
  {
    <p class="muted small">Código de estado: @Model.StatusCode</p>
  }
</div>
